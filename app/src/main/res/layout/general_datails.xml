<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <!-- Imagen de la bandera de Moldova -->

    <ImageView
        android:id="@+id/image_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/map"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Detalles de la tarjeta -->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/blue"

            >
            <TextView
                android:id="@+id/text_common_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre común: Moldova"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_below="@id/image_flag"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"/>
        </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/text_official_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre oficial: República de Moldova"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_below="@id/text_common_name"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"/>

    <TextView
        android:id="@+id/text_native_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre nativo: Republica Moldova"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_below="@id/text_official_name"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"/>

    <TextView
        android:id="@+id/text_country_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Código de país: MD"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_below="@id/text_native_name"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"/>

    <TextView
        android:id="@+id/text_numeric_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Código numérico de país: 498"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_below="@id/text_country_code"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"/>

    <TextView
        android:id="@+id/text_coa_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Código de país en el COI: MDA"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_below="@id/text_numeric_code"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"/>

    <TextView
        android:id="@+id/text_independence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Independencia: Verdadero"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_below="@id/text_coa_code"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"/>

    <TextView
        android:id="@+id/text_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado: Asignado oficialmente"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_below="@id/text_independence"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"/>

    <TextView
        android:id="@+id/text_un_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Miembro de las Naciones Unidas: Verdadero"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_below="@id/text_state"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"/>

</RelativeLayout>

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
