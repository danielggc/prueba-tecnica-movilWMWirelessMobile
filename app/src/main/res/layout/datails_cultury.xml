                android:textSize="16sp"
                android:layout_below="@id/text_map_links_value"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"/>

            <TextView
                android:id="@+id/text_country_codes_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_country_codes"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:text="MD"
                android:textColor="@color/grey"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/text_road_side"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lado de la carretera:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_below="@id/text_country_codes_value"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"/>

            <TextView
                android:id="@+id/text_road_side_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_road_side"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:text="Derecha"
                android:textColor="@color/grey"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/text_postal_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Formato de cÃ³digo postal:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_below="@id/text_road_side_value"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"/>

            <TextView
                android:id="@+id/text_postal_code_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_postal_code"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:text="MD-#### (Regex: ^(?:MD)*(\d{4})$)"
                android:textColor="@color/grey"
                android:textSize="12sp" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_below="@id/text_postal_code_value"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
