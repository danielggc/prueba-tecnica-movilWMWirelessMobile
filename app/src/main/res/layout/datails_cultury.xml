                android:textColor="@color/grey"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/text_coat_of_arms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escudo de armas:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_below="@id/text_flag_value"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"/>

            <TextView
                android:id="@+id/text_coat_of_arms_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_coat_of_arms"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:text="Ver en PNG / Ver en SVG"
                android:textColor="@color/grey"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/text_map_links"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enlaces a mapas:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_below="@id/text_coat_of_arms_value"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"/>

            <TextView
                android:id="@+id/text_map_links_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_map_links"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:text="Google Maps / OpenStreetMaps"
                android:textColor="@color/grey"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/text_country_codes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CÃ³digos de paÃ­s y de automÃ³viles:"
