<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/DeliveryInfoLayout"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/iconIdex"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user"

        />
    <TextView
        android:id="@+id/codigo_remision_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iconIdex"
        android:layout_toEndOf="@+id/iconIdex"
        tools:text= "dadawdawdwd" />
    <TextView
        android:id="@+id/direccion_destinatario_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_below="@+id/codigo_remision_item"
        android:layout_toRightOf="@+id/iconIdex"
        android:layout_toEndOf="@+id/iconIdex"
        tools:text = "wdawd"/>

    <TextView
        android:id="@+id/nombre_terminal_destino_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="42dp"
        android:layout_marginLeft="62dp"
        android:layout_toStartOf="@+id/icon_button_user"
        android:layout_toLeftOf="@+id/icon_button_user"
        android:gravity="center_vertical"
        android:textStyle="italic"
        tools:text="DC" />

    <ImageButton
        android:id="@+id/icon_button_user"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/arrow"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/expandable_layout"
        android:visibility="visible"
        android:layout_below="@+id/iconIdex"
        tools:ignore="ExtraText">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/destinatario_item"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14dp"
            android:text="DESTINATARIO"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/destinatario_item_r"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:padding="12dp"
            android:text="name"
            android:layout_below="@id/destinatario_item"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/telefono_item"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="TELEFONO"
            android:layout_below="@id/destinatario_item_r"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/telefono_item_r"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:padding="12dp"
            android:text="name"
            android:layout_below="@id/telefono_item"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/origen_Info_item"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="ORIGEN"
            android:layout_below="@id/telefono_item_r"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/origen_Info_item_r"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:padding="12dp"
            android:text="name"
            android:layout_below="@id/origen_Info_item"/>


        <ImageButton
            android:id="@+id/icon_button_map_iem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/map"
            android:layout_below="@id/origen_Info_item_r"/>
        />
    </RelativeLayout>


</RelativeLayout>