<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/sub_green">
        <RelativeLayout
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

            <!-- Imagen de la bandera de Moldova -->

            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/image_flag"
                android:layout_width="78dp"
                android:layout_height="33dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/geography" />

            <!-- Detalles de la tarjeta -->


                <TextView
                    android:id="@+id/text_region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_flag"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="32dp"
                    android:text="Región"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_region_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_region"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="32dp"
                    android:text="Europa"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />

                <TextView
                android:id="@+id/text_Subregión"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subregión"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_below="@id/text_region_r"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"/>

                <TextView
                    android:id="@+id/text_sub_region_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_Subregión"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="32dp"
                    android:text="Europa del Este"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />

            <TextView
                android:id="@+id/text_native_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre nativo:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_below="@id/text_sub_region_r"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"/>

                <TextView
                    android:id="@+id/text_native_name_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_native_name"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="32dp"
                    android:text="Republica Moldova"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />

            <TextView
                android:id="@+id/text_lat_long"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latitud y longitud:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_below="@id/text_native_name_r"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"/>

            <TextView
                android:id="@+id/text_lat_long_values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_lat_long"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:text="47°N, 29°E"
                android:textColor="@color/grey"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/text_neighbors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Países vecinos:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_below="@id/text_lat_long_values"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"/>

            <TextView
                android:id="@+id/text_neighbors_values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_neighbors"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:text="Rumania (ROU), Ucrania (UKR)"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Superficie:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_below="@id/text_neighbors_values"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"/>

            <TextView
                android:id="@+id/text_area_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_area"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:text="33,846 km²"
                android:textColor="@color/grey"
                android:textSize="12sp" />


            Copy code
            <TextView
                android:id="@+id/text_landlocked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sin salida al mar:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_below="@id/text_area_value"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"/>

            <TextView
                android:id="@+id/text_landlocked_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_landlocked"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:text="Verdadero"
                android:textColor="@color/grey"
                android:textSize="12sp" />

         </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
